<Window x:Class="ProductManafement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManafement"
        mc:Ignorable="d"
        Title="Mehr Product App" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="2" Background="WhiteSmoke" Width="250"
                HorizontalAlignment="Center" BorderThickness="2" BorderBrush="Gray">
            <StackPanel>
                <Button Name="btnHome" Margin="20,30" Background="#3E454C" Height="50" Foreground="White"  FontSize="22">Home</Button>
                <Button Name="btnEmployees" Margin="20,30" Background="#3E454C" Height="50" Foreground="White"  FontSize="22">Employees</Button>
                <Button Name="btnCustomers" Margin="20,30" Background="#3E454C" Height="50" Foreground="White"  FontSize="22">Customers</Button>
                <Button Name="btnProducts" Margin="20,30" Background="#3E454C" Height="50" Foreground="White"  FontSize="22">Products</Button>
                <Image Margin="10,40" Height="150" Width="150" Source="Resources/MehrLogo.png"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Margin="2" Background="Orange" BorderThickness="2"
                BorderBrush="Gray" HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Stretch">
                <Label FontSize="32" FontWeight="Heavy" HorizontalAlignment="Center" FontFamily="Vazir" Margin="0,50,0,0">
                    Welcome to Mehr Product App
                </Label>
            </StackPanel>
        </Border>
    </Grid>
</Window>

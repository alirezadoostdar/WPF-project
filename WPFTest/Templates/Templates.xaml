<Window x:Class="WPFTest.Templates.Templates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.Templates"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Templates" Height="150" Width="800">
    <UniformGrid Margin="5" Columns="3">
        <Button Margin="5" Name="btnControlTemplate" Click="btnControlTemplate_Click">Control Template</Button>
        <Button Margin="5" Name="btnDataTemplate" Click="btnDataTemplate_Click">Data Control</Button>
        <Button Margin="5" ></Button>
    </UniformGrid>
</Window>

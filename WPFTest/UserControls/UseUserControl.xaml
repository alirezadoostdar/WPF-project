        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.UserControls"
        xmlns:userControl="clr-namespace:WPFTest.UserControls"
        mc:Ignorable="d"
        Title="UseUserControl" Height="450" Width="800">
    <StackPanel>
        <userControl:FileBrowseUserControl x:Name="MyUcFileBrowse"  FileNameChanged="MyUcFileBrowse_FileNameChanged"/>
        <Label Name="lblShow" Background="AntiqueWhite" Padding="5" Margin="5"></Label>
    </StackPanel>
</Window>

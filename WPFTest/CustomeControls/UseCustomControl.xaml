<Window x:Class="WPFTest.CustomeControls.UseCustomControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.CustomeControls"
        xmlns:customControl="clr-namespace:WPFTest.CustomeControls"
        mc:Ignorable="d"
        Title="UseCustomControl" Height="450" Width="800">
    <StackPanel>
        <Border Margin="5" BorderBrush="Aqua" BorderThickness="4" CornerRadius="5">
            <Button Background="Aqua">button 1</Button>
        </Border>
        <customControl:MyButton Content="My new Button" VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Background="AntiqueWhite" BorderBrush="Gray"
                                BorderThickness="4" CornerRadius="10"/>
    </StackPanel>
</Window>

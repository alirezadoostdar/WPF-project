<Window x:Class="WPFTest.HandelingException"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="HandelingException" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Margin="5">number 1:</Label>
            <TextBox Margin="5" Name="txtNumber1"></TextBox>
            <Label Margin="5">number 2:</Label>
            <TextBox Margin="5" Name="txtNumber2"></TextBox>
            <Button Name="btnSum" Click="btnSum_Click"  Margin="5">Sum</Button>
            <TextBlock Name="txtSum" Margin="5"></TextBlock>
        </StackPanel>
    </Grid>
</Window>

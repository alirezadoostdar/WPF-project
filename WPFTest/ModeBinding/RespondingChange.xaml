<Window x:Class="WPFTest.ModeBinding.RespondingChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest.ModeBinding"
        mc:Ignorable="d"
        Title="RespondingChange" Height="300" Width="400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button Margin="5" Name="btnAdd" Click="btnAdd_Click">Add</Button>
            <Button Margin="5" Name="btnEdit" Click="btnEdit_Click">Edit</Button>
            <Button Margin="5" Name="btnDelete" Click="btnDelete_Click">Delete</Button>
        </StackPanel>
        <ListBox Name="lbUser" DisplayMemberPath="Name"></ListBox>
    </DockPanel>
</Window>

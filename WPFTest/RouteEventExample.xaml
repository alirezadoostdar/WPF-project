<Window x:Class="WPFTest.RouteEventExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="RouteEventExample" Height="450" Width="800">
    <Grid Name="Grid1" Margin="10"
          KeyDown="Grid1_KeyDown"
          PreviewKeyDown="Grid1_PreviewKeyDown">
        <StackPanel Name="stackPanel1" Margin="10"
                    KeyDown="stackPanel1_KeyDown"
                    PreviewKeyDown="stackPanel1_PreviewKeyDown">
            <StackPanel Name="stackPanel2" Margin="10"
                        KeyDown="stackPanel2_KeyDown"
                        PreviewKeyDown="stackPanel2_PreviewKeyDown">
                <TextBox Name="txtName" Margin="10"
                         KeyDown="txtName_KeyDown"
                         PreviewKeyDown="txtName_PreviewKeyDown"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

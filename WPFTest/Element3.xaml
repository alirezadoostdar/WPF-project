<Window x:Class="WPFTest.Element3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="Element3" Height="450" Width="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Band="0" BandIndex="0" >
                <Button ToolBar.OverflowMode="Always">File</Button>
                <Button ToolBar.OverflowMode="Never" ToolTip="Edit info">Edit</Button>
                <Button ToolBar.OverflowMode="AsNeeded">View</Button>
                <Separator/>
                <Button>Help</Button>
                <Label>Alireza Doostdar</Label>
            </ToolBar>
            <ToolBar Band="1" BandIndex="1">
                <Button>Copy</Button>
                <Button>Cut</Button>
                <Button>Paste</Button>
            </ToolBar>
            <ToolBar>
                <Button>Left</Button>
                <Button>Center</Button>
                <Button>Right</Button>
            </ToolBar>
        </ToolBarTray>
        <TextBox >
            
        </TextBox>
    </DockPanel>
</Window>
